<h1>Show selected article</h1>

<p>
    Title: 
    
    <%= @article.title %>
</p>
<% if @article.user %>
<p>
    <ul>
        <div>
            <li><%= link_to 'avatar', user_path(@article.user)%></li>
            <li><%= link_to @article.user.username, user_path(@article.user)%></li>
            <li><%= pluralize(@article.user.articles.count, "article")  %></li>
        </div>
    </ul>
</p>
<% end %>
<p>
    Description: 
    
    <%= @article.description %>
</p>

<%= link_to "Edit article", edit_article_path(@article) %> <br/>
<%= link_to "Back to article listing", articles_path %>